{% extends 'base.j2' %}
{% import 'macros.j2' as macros %}
{% block content %}
<h1> Add New Product </h1>
<form method="POST">
    {{ form.hidden_tag() }}
    {{ macros.render_field(form.name) }}
    {{ macros.render_field(form.quantity) }}
    {{ macros.render_field(form.price) }}
    {{ macros.render_field(form.description) }}
    <div class="buttons">
      <input type="submit" value="Add">
    </div>
</form>

{% endblock %}